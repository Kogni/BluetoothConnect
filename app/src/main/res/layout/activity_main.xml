<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.View_Main_Startup">

    <RelativeLayout
        android:id="@+id/layOut1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="#720FD5"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-83dp">

        <TextView android:text=""
            android:id="@+id/out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <Button
            android:id="@+id/button_turnon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="TURN_ON" />

        <Button
            android:id="@+id/button_discover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button_turnon"
            android:layout_below="@+id/button_turnon"
            android:layout_marginTop="10dp"
            android:text="DISCOVERABLE" />

        <Button
            android:id="@+id/button_turnoff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button_discover"
            android:layout_below="@+id/button_discover"
            android:layout_marginTop="10dp"
            android:text="TURN_OFF" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>